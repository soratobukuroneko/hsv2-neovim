// vi: et sw=4 ts=4
{
    "suggest": {
        "selection": "recentlyUsedByPrefix",
        "enablePreselect": true,
        "enablePreview": true,
        "detailMaxLength": 256,
        "acceptSuggestionOnCommitCharacter": true,
        "removeDuplicateItems": true,
        "maxCompleteItemCount": 200,
        "snippetsSupport": true,
        "completionItemKindLabels": {
            "keyword": "\uf1de",
            "variable": "\ue79b",
            "value": "\uf89f",
            "operator": "\u03a8",
            "constructor": "\uf0ad",
            "function": "\u0192",
            "reference": "\ufa46",
            "constant": "\uf8fe",
            "method": "\uf09a",
            "struct": "\ufb44",
            "class": "\uf0e8",
            "interface": "\uf417",
            "text": "\ue612",
            "enum": "\uf435",
            "enumMember": "\uf02b",
            "module": "\uf40d",
            "color": "\ue22b",
            "property": "\ue624",
            "field": "\uf9be",
            "unit": "\uf475",
            "event": "\ufacd",
            "file": "\uf723",
            "folder": "\uf114",
            "snippet": "\ue60b",
            "typeParameter": "\uf728",
            "default": "\uf29c"
        }
    },
    "colors": {
        "filetypes": "*"
    },
    "links": {
        "tooltip": true
    },
    "diagnostic": {
        "autoRefresh": true,
        "refreshOnInsertMode": true,
        "virtualText": true,
        "virtualTextCurrentLineOnly": false
    },
    "codeLens": {
        "enable": true
    },
    "coc": {
        "preferences": {
            "jumpCommand": "tab drop",
            "extensionUpdateCheck": "daily"
        }
    },
    "semanticTokens": {
        "filetypes": [
            "*"
        ]
    },
    "clangd.checkUpdates": true,
    "clangd.fallbackFlags": "-Wall -Wextra -Wpedantic -Werror",
    "languageserver": {
        "lua": {
            "command": "lua-language-server",
            "filetypes": [
                "lua"
            ],
            "settings": {
                "Lua": {
                    "hint": {
                        "enable": true
                    },
                    "completion": {
                        "callSnippet": "Both"
                    }
                }
            }
        }
    }
}
